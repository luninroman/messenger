{% extends 'MessengerBundle:Messenger:layout.html.twig' %}
{% block content %}
    <!--Page Content-->
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-lg-offset-3 col-md-6 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-6 col-xs-offset-3">
                <h2 id="form-header" class="col-md-offset-2 col-sm-offset-2">Profile</h2>
                <div class="row">

                </div>
                <br />
                <form class="form form-horizontal" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="control-label col-sm-2 fontColor" for="profilePhoto">Profile photo:</label>
                        <div class="col-sm-8">
                            <input type="file" name="photo" multiple accept="image/*" id="profilePhoto">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2 fontColor" for="firstName">Имя:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="firstName" placeholder="Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2 fontColor" for="inputEmail">Email:</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="inputEmail" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2 fontColor">Sex:</label>
                        <div class="col-sm-2">
                            <label class="radio-inline">
                                <input type="radio" name="genderRadios" value="male">Male
                            </label>
                        </div>
                        <div class="col-sm-2">
                            <label class="radio-inline">
                                <input type="radio" name="genderRadios" value="female"> Female
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-xs-4 col-sm-2 fontColor" for="aboutMe">About me:</label>
                        <div class="col-sm-10">
                            <textarea name="" id="aboutMe" cols="20" rows="3" class="form-control" placeholder="Tell a little about yourself"></textarea>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-lg-offset-4 col-lg-8 col-md-offset-4 col-md-8 col-sm-offset-4 col-sm-8 col-xs-offset-2 col-xs-10">
                            <input type="submit" class="btn btn-primary" value="Sign Up">
                            <input type="reset" class="btn btn-default col-xs-offset-1" value="Reset form">
                        </div>
                    </div>
                </form>
            </div>
        </div> <!--.row-->
    </div> <!--.container-->
{% endblock content %}